pyg = 'ay'

original = raw_input('Enter a word:')

if len(original) > 0 and original.isalpha():
    word = original.lower()
    first = word[0]
    print original
    new_word = word + first + pyg
    print new_word
    length = len(new_word)
    new_word= new_word [1:length]
    print new_word[1:length]
else:
    print 'empty'
